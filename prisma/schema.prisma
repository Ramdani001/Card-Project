generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Role {
  idRole    Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  users User[]
}

model User {
  idUsr     Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  idRole    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  role         Role?         @relation(fields: [idRole], references: [idRole])
  cart         Cart?
  transactions Transaction[]
}

model TypeCard {
  idTypeCard Int      @id @default(autoincrement())
  name       String   @unique
  note       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  cards Card[]
}

model Card {
  idCard     Int      @id @default(autoincrement())
  idDetail   Int
  idTypeCard Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  detail           DetailCard        @relation(fields: [idDetail], references: [idDetail])
  typeCard         TypeCard          @relation(fields: [idTypeCard], references: [idTypeCard])
  cartItems        CartItem[]
  transactionItems TransactionItem[]
}

model DetailCard {
  idDetail   Int      @id @default(autoincrement())
  name       String
  price      Float
  stock      Int
  idDiscount Int?
  note       String?
  idImage    Int?
  cards      Card[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  discount Discount? @relation(fields: [idDiscount], references: [idDiscount])
  image    Image?    @relation(fields: [idImage], references: [idImage])
}

model Discount {
  idDiscount Int      @id @default(autoincrement())
  discount   Float
  note       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  details DetailCard[]
}

model Image {
  idImage   Int      @id @default(autoincrement())
  name      String
  location  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  details DetailCard[]
}

model Cart {
  idCart    Int      @id @default(autoincrement())
  idUsr     Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  user  User       @relation(fields: [idUsr], references: [idUsr])
  items CartItem[]
}

model CartItem {
  idCartItem Int      @id @default(autoincrement())
  idCart     Int
  idCard     Int
  quantity   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  cart Cart @relation(fields: [idCart], references: [idCart])
  card Card @relation(fields: [idCard], references: [idCard])

  @@unique([idCart, idCard])
}

model Transaction {
  idTrx         Int               @id @default(autoincrement())
  idUsr         Int
  totalAmount   Float
  status        TransactionStatus @default(PENDING)
  paymentMethod String?
  snapAddress   String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @default(now()) @updatedAt

  user  User              @relation(fields: [idUsr], references: [idUsr])
  items TransactionItem[]
}

model TransactionItem {
  idTrxItem Int      @id @default(autoincrement())
  idTrx     Int
  idCard    Int
  quantity  Int
  price     Float
  subtotal  Float
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  transaction Transaction @relation(fields: [idTrx], references: [idTrx])
  card        Card        @relation(fields: [idCard], references: [idCard])
}

model AppConfig {
  idConfig  Int      @id @default(autoincrement())
  code      String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum TransactionStatus {
  PENDING
  PAID
  SENT
  COMPLETED
  CANCELLED
}
