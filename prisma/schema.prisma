generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}
datasource db {
  provider = "postgresql"
}

model Role {
  idRole    Int    @id @default(autoincrement())
  name  String @unique
}

model User {
  idUsr        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  idRole    Int? 
  createdAt DateTime @default(now())
}